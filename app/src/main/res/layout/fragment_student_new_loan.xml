<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:padding="5dp"
    tools:context=".Presenter.Fragment.Student.StudentNewLoanFragment"
    tools:layout_editor_absoluteY="25dp">

	<EditText
		android:id="@+id/dateRequest"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:clickable="false"
		android:cursorVisible="false"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:layout_weight="1.5"
		android:hint="Date Of Loan"
		app:layout_constraintEnd_toStartOf="@+id/ivdateFrom"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/ivdateFrom"
		android:layout_width="40dp"
		android:layout_height="0dp"
		android:layout_marginEnd="8dp"
		android:layout_weight=".5"
		android:src="@drawable/ic_action_calendar_view"
		app:layout_constraintBottom_toBottomOf="@+id/dateRequest"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/dateRequest" />

	<EditText
		android:id="@+id/ettimeLoan"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:clickable="false"
		android:cursorVisible="false"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_weight="1.5"
		android:hint="Time Of Loan"
		app:layout_constraintEnd_toStartOf="@+id/ivtimeLoan"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/dateRequest" />

	<ImageView
		android:id="@+id/ivtimeLoan"
		android:layout_width="40dp"
		android:layout_height="0dp"
		android:layout_marginEnd="8dp"
		android:layout_weight=".5"
		android:src="@drawable/ic_clock"
		app:layout_constraintBottom_toBottomOf="@+id/ettimeLoan"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/ettimeLoan" />

	<EditText
		android:id="@+id/dateTo"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="11dp"
		android:layout_marginEnd="8dp"
		android:layout_weight="1.5"
		android:clickable="false"
		android:cursorVisible="false"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:hint="Date Of Return"
		app:layout_constraintEnd_toStartOf="@+id/ivdateTo"
		app:layout_constraintHorizontal_bias="0.58"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/ettimeLoan" />

	<ImageView
		android:id="@+id/ivdateTo"
		android:layout_width="40dp"
		android:layout_height="0dp"
		android:layout_marginEnd="8dp"
		android:layout_weight=".5"
		android:src="@drawable/ic_action_calendar_view"
		app:layout_constraintBottom_toBottomOf="@+id/dateTo"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/dateTo" />

	<EditText
		android:id="@+id/ettimeReturn"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:clickable="false"
		android:cursorVisible="false"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_weight="1.5"
		android:hint="Time Of Return"
		app:layout_constraintEnd_toStartOf="@+id/ivTimeReturn"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/dateTo" />

	<ImageView
		android:id="@+id/ivTimeReturn"
		android:layout_width="40dp"
		android:layout_height="0dp"
		android:layout_marginEnd="8dp"
		android:layout_weight=".5"
		android:src="@drawable/ic_clock"
		app:layout_constraintBottom_toBottomOf="@+id/ettimeReturn"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/ettimeReturn" />

	<TextView
		android:id="@+id/tvLocation"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_alignStart="@+id/reason_editText"
		android:layout_below="@+id/spiItem"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:text="TextView"
		android:visibility="invisible"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/spiItem"
		app:layout_constraintTop_toBottomOf="@+id/spiItem" />

	<TextView
		android:id="@+id/category_text"
		android:layout_width="0dp"
		android:layout_height="25dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="8dp"
		android:text="Select A Category"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/ettimeReturn" />

	<Spinner
		android:id="@+id/categories"
		android:layout_width="0dp"
		android:layout_height="31dp"
		android:layout_alignStart="@+id/category_text"
		android:layout_below="@+id/category_text"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/category_text" />

	<TextView
		android:id="@+id/tvItem"
		android:layout_width="0dp"
		android:layout_height="36dp"
		android:layout_alignStart="@+id/categories"
		android:layout_below="@+id/categories"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_weight="1.5"
		android:text="Select item"
		android:visibility="invisible"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/categories" />

	<Spinner
		android:id="@+id/spiItem"
		android:layout_width="0dp"
		android:layout_height="36dp"
		android:layout_alignEnd="@+id/categories"
		android:layout_below="@+id/categories"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tvItem" />

	<EditText
		android:id="@+id/reason_editText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_alignEnd="@+id/spiItem"
		android:layout_below="@+id/spiItem"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:hint="Reason"
		android:singleLine="true"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tvLocation" />

	<Button
		android:id="@+id/btn_submit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/reason_editText"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginTop="8dp"
		android:background="@drawable/custom_button"
		android:text="@string/submit"
		android:textColor="@color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/reason_editText" />

	<Button
		android:id="@+id/btn_search_equipment"
		android:background="@drawable/custom_button_outlineonly"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:text="@string/learning_gallery"
		app:layout_constraintBottom_toBottomOf="@+id/btn_submit"
		app:layout_constraintEnd_toStartOf="@+id/btn_submit"
		app:layout_constraintTop_toTopOf="@+id/btn_submit"
		android:visibility="gone"/>


</android.support.constraint.ConstraintLayout>

